<!-- 2.单独使用wxs文件进行定义，再使用<wxs/>标签进行导入 -->
<!-- 其中的src必须使用相对路径，不能使用绝对路径 -->
<wxs src="../../wxs/info.wxs" module="info"/>
<view>{{info.name}}</view>
<view>{{info.message}}</view>
<view>{{info.sum(20,30)}}</view>
<view>{{info.test}}</view>

