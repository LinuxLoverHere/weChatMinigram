<!-- 事件处理的回顾 -->
<button size="mini" bindtap="handleBtnClick">按钮</button>
<button size="mini" bind:tap="handleBtnClick">按钮</button>
<button size="mini" catch:tap="handleBtnClick">按钮</button>

<!-- 2、常见的一些事件 -->
<view class="box" bindtouchstart="handleTouchStart" bindtap="handleTap" bindtouchend="handleTouchEnd" bindtouchmove="handleTouchMove" bindlongpress="handleLongPress">
</view>
<!-- 3.事件对象的分析 -->
<button size="mini" bindtap="handleEventClick" bindtouchend="handleEventEnd">按钮</button>

<view class="outer" id="outer" bindtap="handleOuter">外层的view
  <view class="inner" id="inner" bindtap="handleInner">内部的view</view>
</view>

<!-- 4、事件的传递参数 -->
<view class="container">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="item" bindtap="handleItemClick"
          data-index="{{index}}"
          data-item="{{item}}"
    >{{item}}</view>
  </block>
</view>

<!-- 5.事件捕获与事件冒泡 -->
<view class="view1" capture-bind:tap="handleCaptureView1" bindtap="handleBindView1">
  <view class="view2" capture-catch:tap="handleCaptureView2" catchtap="handleBindView2">
    <view class="view3" capture-bind:tap="handleCaptureView3" bindtap="handleBindView3"></view>
  </view>
</view>